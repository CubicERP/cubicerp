<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        
        <record model="ir.module.category" id="module_category_load">
            <field name="name">Account Load</field>
            <field name="description">Helps you manage your initial account load with multiple account moves in easy and secure way.</field>
            <field name="sequence">60</field>
        </record>
        
        <record id="group_load_user" model="res.groups">
            <field name="name">User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="module_category_load"/>
        </record>
        
        <record id="group_load_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_load"/>
            <field name="implied_ids" eval="[(4, ref('group_load_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
        
        <record model="ir.rule" id="account_expense_comp_rule">
            <field name="name">Account Load multi-company</field>
            <field name="model_id" ref="model_account_load"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
        </record>
                
    </data>
</openerp>