<?xml version="1.0" encoding="UTF-8"?>

<templates>

    <t t-name="accountReport.buttons">
        <button t-att-report_type="'qweb-pdf'" type="button" class='btn btn-primary btn-sm o_account-report-pdf'>PRINT</button>
        <!-- The excel report is available only in Cubic ERP v2018, download from https://github.com/CubicERP/cubicerp/tree/trunk-->
        <button t-att-report_type="'qweb-xls'" type="button" class='btn btn-primary btn-sm o_account-report-xls'>EXCEL</button>
    </t>

    <div t-name='accountkReport.errorModal' class="modal" id="editable_error" tabindex="-1" data-backdrop="static" role="dialog" aria-hidden="true" style="z-index:9999;">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                    <h3 class="modal-title">Error</h3>
                </div>
                <div class="modal-body">
                    <p id='insert_error' class='text-center'></p>
                </div>
            </div>
        </div>
    </div>

</templates>
