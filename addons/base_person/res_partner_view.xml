<?xml version="1.0" encoding="UTF-8"?>

<openerp>
	<data>
		
		<record model='ir.ui.view' id='res_partner_form_view_inherit_person'>
			<field name='name'>res.partner.form.inherit.person</field>
			<field name='model'>res.partner</field>
			<field name='inherit_id' ref='base.view_partner_form'/>
			<!--field name='type'>form</field-->
			<field name='arch' type='xml'>
                <field name="name" position="replace">
                <h3>
                    <field name="name" default_focus="1" placeholder="Name" attrs="{'invisible':[('is_company','=',False)]}"/>
                    <field name="first_name" attrs="{'invisible':[('is_company','=',True)],'required':[('is_company','=',False)]}" on_change="onchange_person_name(first_name,middle_name,surname,mother_name)" placeholder="First Name" style="width: 24%%"/>
                    <field name="middle_name" attrs="{'invisible':[('is_company','=',True)]}" on_change="onchange_person_name(first_name,middle_name,surname,mother_name)" placeholder="Middle Name" style="width: 23%%"/>
                    <field name="surname" attrs="{'invisible':[('is_company','=',True)],'required':[('is_company','=',False)]}" on_change="onchange_person_name(first_name,middle_name,surname,mother_name)" placeholder="Surname" style="width: 26%%"/>
                    <field name="mother_name" attrs="{'invisible':[('is_company','=',True)]}" on_change="onchange_person_name(first_name,middle_name,surname,mother_name)" placeholder="Mother's Name" style="width: 23%%"/>
                </h3>
                </field>
			</field>
		</record>
		
	</data>
</openerp>
