<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_workorder_record_production" model="ir.ui.view">
            <field name="name">mrp.workorder.record.production.form</field>
            <field name="model">mrp.workorder.record.production</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="qty_producing"/>
                        <field name="user_id"/>
                        <field name="workorder_id" attrs="{'readonly':[('workorder_id','!=',False)]}"/>
                    </group>
                    <footer>
                        <button name="button_record" string="Record Production" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_workorder_record_production" model="ir.actions.act_window">
            <field name="name">Record Production Quantity</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.workorder.record.production</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="context">{'default_workorder_id': active_id}</field>
            <field name="target">new</field>
        </record>

</odoo>
